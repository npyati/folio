{
  "manifest_version": 3,
  "name": "folio",
  "version": "1.0",
  "description": "Transform web pages into beautiful magazine-style reading experiences",

  "icons": {
    "48": "icons/border-48.png"
  },

  "action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Folio Magazine"
  },

  "side_panel": {
    "default_path": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "notifications",
    "sidePanel"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "toggle-reader": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Toggle reader view"
    },
    "add-to-magazine": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Alt+Shift+M"
      },
      "description": "Add page to collection"
    },
    "toggle-fullscreen": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Toggle fullscreen (in reader view)"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["covers/*", "export.html", "export.js", "dist/content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
  